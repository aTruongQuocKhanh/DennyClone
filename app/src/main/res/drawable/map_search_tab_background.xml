<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_checked="true">
        <inset android:insetBottom="-1dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimary"/>
                <stroke android:width="1dp" android:color="@color/colorHalfGray"/>
            </shape>
        </inset>
    </item>
    <item android:state_enabled="false">
        <inset android:insetLeft="-1dp" android:insetRight="-1dp" android:insetTop="-1dp">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent"/>
                <stroke android:width="1dp" android:color="@color/colorHalfGray"/>
            </shape>
        </inset>
    </item>
</selector>